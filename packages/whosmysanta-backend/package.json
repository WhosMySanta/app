{
  "name": "whosmysanta-backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.2.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.41.0",
    "jest": "^19.0.2",
    "lint-staged": "^3.3.1",
    "pre-commit": "^1.2.2",
    "prettier": "^0.21.0",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "dotenv-extended": "^1.0.4",
    "express": "^4.15.2",
    "express-graphql": "^0.6.3",
    "graphql": "^0.9.1",
    "mongoose": "^4.8.6",
    "shortid": "^2.2.8"
  },
  "scripts": {
    "build": "babel src -d build",
    "clean": "rimraf build",
    "dev": "babel-node src",
    "flow": "flow",
    "format": "yarn run prettier && yarn run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore src",
    "precommit": "yarn run format && lint-staged",
    "prettier": "prettier --no-bracket-spacing --single-quote --trailing-comma all --parser flow --write 'src/**/*.js'",
    "start": "node build",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-bracket-spacing --single-quote --trailing-comma all --parser flow --write",
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "pre-commit": "precommit"
}
